<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hasta Yönetimi</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #eef2f3; /* Açık arka plan rengi */
            color: #333;
        }

        .container {
            max-width: 600px; /* Genişlik sınırı */
            margin: 50px auto; /* Üst ve alt boşluk */
            padding: 30px;
            background-color: #ffffff; /* Beyaz arka plan */
            border-radius: 8px; /* Köşe yuvarlama */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Daha belirgin gölge */
            transition: box-shadow 0.3s; /* Hover efekti için geçiş */
        }

            .container:hover {
                box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2); /* Hover sırasında daha fazla gölge */
            }

        h1 {
            text-align: center;
            margin-bottom: 30px; /* Başlık altında boşluk */
            color: #007BFF; /* Başlık rengi */
        }

        .form-section {
            margin-bottom: 40px; /* Bölümler arası boşluk */
        }

        h2 {
            margin-bottom: 15px; /* Alt başlıklar için boşluk */
            font-size: 1.5em; /* Daha büyük başlık boyutu */
            color: #333; /* Başlık rengi */
        }

        label {
            display: block;
            margin-bottom: 8px; /* Etiketler arası boşluk */
            font-weight: bold; /* Kalın yazı */
        }

        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 12px; /* İç boşluk */
            margin-bottom: 20px; /* Giriş alanları arasında boşluk */
            border: 1px solid #ccc; /* Giriş kenar rengi */
            border-radius: 4px; /* Köşe yuvarlama */
            transition: border-color 0.3s; /* Kenar rengi geçiş efekti */
        }

            input[type="text"]:focus, input[type="number"]:focus {
                border-color: #007BFF; /* Fokusta mavi kenar rengi */
                outline: none; /* Kenar çizgisi kaldırıldı */
            }

        .btn {
            background-color: #007BFF; /* Buton rengi */
            color: #fff; /* Yazı rengi */
            padding: 12px 20px; /* İç boşluk */
            border: none;
            border-radius: 4px; /* Köşe yuvarlama */
            cursor: pointer;
            font-size: 16px; /* Yazı boyutu */
            transition: background-color 0.3s; /* Geçiş efekti */
            display: block; /* Buton merkezi konumlandırma */
            width: 100%; /* Buton genişliği */
            margin-top: 10px; /* Buton üstü boşluk */
        }

            .btn:hover {
                background-color: #0056b3; /* Hoverda daha koyu mavi */
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Hasta Yönetimi</h1>

        <div class="form-section">
            <h2>Yeni Hasta Oluştur</h2>
            <form id="createPatientForm">
                <label for="name">Hasta Adı:</label>
                <input type="text" id="name" placeholder="Adı girin..." required>

                <label for="lastName">Hasta Soyadı:</label>
                <input type="text" id="lastName" placeholder="Soyadı girin..." required>

                <label for="tcNo">TC Kimlik No:</label>
                <input type="number" id="tcNo" placeholder="TC kimlik numarasını girin..." required>

                <button type="submit" class="btn">Hasta Oluştur</button>
            </form>
        </div>
    </div>

    <script>
        const apiUrl = 'http://localhost:5000/patients'; // API URL

        $('#createPatientForm').on('submit', async function (event) {
            event.preventDefault();
            const name = $('#name').val();
            const lastName = $('#lastName').val();
            const tcNo = $('#tcNo').val();
            const patientData = {
                name: name,
                lastName: lastName,
                tcNO: tcNo
            };

            await fetch(apiUrl, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(patientData),
            });

            $('#createPatientForm')[0].reset(); // Formu sıfırla
        });
    </script>
</body>
</html>
