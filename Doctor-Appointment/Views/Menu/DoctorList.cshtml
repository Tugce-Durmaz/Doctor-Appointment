<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doktor Yönetimi</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9f9;
            color: #333;
            line-height: 1.6;
        }

        .container {
            width: 80%;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1, h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: 700;
        }

        h2 {
            color: #2980B9;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                font-weight: 500;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #bdc3c7;
                border-radius: 5px;
                transition: border-color 0.3s;
            }

                .form-group input:focus {
                    border-color: #2980B9;
                    outline: none;
                }

        button {
            background-color: #2980B9;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.3s;
        }

            button:hover {
                background-color: #1B6D99;
                transform: translateY(-2px);
            }

        .doctor-list {
            margin-top: 20px;
        }

        .doctor-item {
            background-color: #fefefe;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s;
        }

            .doctor-item:hover {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            }

            .doctor-item h3 {
                margin-bottom: 5px;
                color: #34495E;
            }

            .doctor-item button {
                background-color: #e74c3c;
                margin-right: 10px;
            }

                .doctor-item button:hover {
                    background-color: #c0392b;
                }

        .edit-button {
            background-color: #f39c12;
        }

            .edit-button:hover {
                background-color: #e67e22;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Doktor Yönetimi</h1>

        <h2>Yeni Doktor Ekle</h2>
        <form id="doctorForm" method="POST">
            <div class="form-group">
                <label for="doctorName">Adı</label>
                <input type="text" id="doctorName" placeholder="Doktor adı giriniz" required>
            </div>
            <div class="form-group">
                <label for="doctorLastName">Soyadı</label>
                <input type="text" id="doctorLastName" placeholder="Doktor soyadını giriniz" required>
            </div>
            <button type="submit">Doktor Ekle</button>
        </form>

        <div class="doctor-list">
            <h2>Tüm Doktorlar</h2>
            <div id="doctorList"></div>
        </div>
    </div>

    <script>
        $(document).ready(function () {

            const apiUrl = "/doctors";

            function renderDoctorItem(doctor) {
                return `
                            <div class="doctor-item">
                                <h3>${doctor.name} ${doctor.lastName}</h3>
                                <button onclick="deleteDoctor(${doctor.id})">Sil</button>
                            </div>
                        `;
            }

            function loadDoctors() {
                $.get(apiUrl, function (data) {
                    const doctorItems = data.map(doctor => renderDoctorItem(doctor));
                    $('#doctorList').html(doctorItems.join(''));
                }).fail(function () {
                    alert("Doktor listesi yüklenirken bir hata oluştu.");
                });
            }

            $('#doctorForm').on('submit', function (e) {
                e.preventDefault();

                const doctor = {
                    name: $('#doctorName').val(),
                    lastName: $('#doctorLastName').val()
                };

                $.ajax({
                    url: apiUrl,
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify(doctor),
                    success: function () {
                        loadDoctors();
                        alert("Doktor başarıyla eklendi!");
                        $('#doctorForm')[0].reset();
                    },
                    error: function () {
                        alert("Doktor eklenirken bir hata oluştu.");
                    }
                });
            });

            window.deleteDoctor = function (id) {
                if (confirm("Bu doktoru silmek istediğinize emin misiniz?")) {
                    $.ajax({
                        url: `${apiUrl}/${id}`,
                        type: "DELETE",
                        success: function () {
                            loadDoctors();
                            alert("Doktor başarıyla silindi!");
                        },
                        error: function () {
                            alert("Doktor silinirken bir hata oluştu.");
                        }
                    });
                }
            };

            loadDoctors();
        });
    </script>
</body>
</html>
