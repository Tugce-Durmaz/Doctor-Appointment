<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doktor Yönetimi</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9f9;
            color: #333;
            line-height: 1.6;
        }

        .container {
            width: 80%;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #2C3E50;
            font-weight: 700;
        }

        h2 {
            color: #2980B9;
            margin-bottom: 15px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                font-weight: 500;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #bdc3c7;
                border-radius: 5px;
                transition: border-color 0.3s;
            }

                .form-group input:focus {
                    border-color: #2980B9;
                    outline: none;
                }

        button {
            background-color: #2980B9;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.3s;
        }

            button:hover {
                background-color: #1B6D99;
                transform: translateY(-2px);
            }

        .search-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .search-bar input {
                flex: 1;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #bdc3c7;
                margin-right: 10px;
                transition: border-color 0.3s;
            }

                .search-bar input:focus {
                    border-color: #2980B9;
                    outline: none;
                }

        .doctor-list {
            margin-top: 20px;
        }

        .doctor-item {
            background-color: #fefefe;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s;
        }

            .doctor-item:hover {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            }

            .doctor-item h3 {
                margin-bottom: 5px;
                color: #34495E;
            }

            .doctor-item p {
                margin-bottom: 8px;
                color: #7f8c8d;
            }

            .doctor-item button {
                background-color: #e74c3c;
                margin-right: 10px;
            }

                .doctor-item button:hover {
                    background-color: #c0392b;
                }

        .edit-button {
            background-color: #f39c12;
        }

            .edit-button:hover {
                background-color: #e67e22;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1>Doktor Yönetimi</h1>

        <!-- Doktor Arama -->
        <div class="search-bar">
            <input type="text" id="searchQuery" placeholder="Doktor adı veya uzmanlık alanı ara...">
            <button id="searchBtn">Ara</button>
        </div>

        <!-- Yeni Doktor Ekleme Formu -->
        <h2>Yeni Doktor Ekle</h2>
        <div class="form-group">
            <label for="doctorName">Adı</label>
            <input type="text" id="doctorName" placeholder="Doktor adı giriniz">
        </div>
        <div class="form-group">
            <label for="doctorBranch">Uzmanlık Alanı</label>
            <input type="text" id="doctorBranch" placeholder="Doktorun uzmanlık alanını giriniz">
        </div>
        <button id="addDoctorBtn">Doktor Ekle</button>

        <!-- Doktor Listesi -->
        <div class="doctor-list">
            <h2>Tüm Doktorlar</h2>
            <div id="doctorList">
                <!-- Doktorlar burada listelenecek -->
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Doktorları Yükleme
            function loadDoctors() {
                $.get("/doctors", function (data) {
                    $('#doctorList').empty();
                    data.forEach(function (doctor) {
                        $('#doctorList').append(`
                                        <div class="doctor-item">
                                            <h3>${doctor.name}</h3>
                                            <p>Uzmanlık: ${doctor.branch}</p>
                                            <button onclick="deleteDoctor(${doctor.id})">Sil</button>
                                            <button class="edit-button" onclick="editDoctor(${doctor.id})">Düzenle</button>
                                        </div>
                                    `);
                    });
                });
            }

            // Doktor Ekleme
            $('#addDoctorBtn').click(function () {
                const doctorName = $('#doctorName').val();
                const doctorBranch = $('#doctorBranch').val();

                $.post("/doctors", {
                    name: doctorName,
                    branch: doctorBranch
                }, function (data) {
                    loadDoctors();
                    alert("Doktor başarıyla eklendi!");
                });
            });

            // Doktor Silme
            window.deleteDoctor = function (id) {
                if (confirm("Bu doktoru silmek istediğinize emin misiniz?")) {
                    $.ajax({
                        url: `/doctors/${id}`,
                        type: 'DELETE',
                        success: function () {
                            loadDoctors();
                            alert("Doktor başarıyla silindi!");
                        }
                    });
                }
            };

            // Doktor Düzenleme
            window.editDoctor = function (id) {
                const doctorName = prompt("Yeni doktor adı:");
                const doctorBranch = prompt("Yeni uzmanlık alanı:");

                $.ajax({
                    url: `/doctors/${id}`,
                    type: 'PATCH',
                    contentType: "application/json",
                    data: JSON.stringify({ name: doctorName, branch: doctorBranch }),
                    success: function () {
                        loadDoctors();
                        alert("Doktor başarıyla güncellendi!");
                    }
                });
            };

            // Doktor Arama
            $('#searchBtn').click(function () {
                const query = $('#searchQuery').val();
                $.get(`/doctors/search?query=${query}`, function (data) {
                    $('#doctorList').empty();
                    data.forEach(function (doctor) {
                        $('#doctorList').append(`
                                        <div class="doctor-item">
                                            <h3>${doctor.name}</h3>
                                            <p>Uzmanlık: ${doctor.branch}</p>
                                            <button onclick="deleteDoctor(${doctor.id})">Sil</button>
                                            <button class="edit-button" onclick="editDoctor(${doctor.id})">Düzenle</button>
                                        </div>
                                    `);
                    });
                });
            });

            // Sayfa yüklendiğinde doktorları getir
            loadDoctors();
        });
    </script>

</body>
</html>
