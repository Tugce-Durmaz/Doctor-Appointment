            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f0f8ff;
            color: #333;
        }

        .actions button {
            margin-right: 5px;
            padding: 7px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .delete-btn {
            background-color: #f44336;
            color: white;
        }

            .delete-btn:hover {
                background-color: #d32f2f;
            }

        input[type="text"]#search-bar {
            width: 100%;
            padding: 12px;
            border: 1px solid #b0c4de;
            border-radius: 6px;
            margin-top: 10px;
            transition: border-color 0.3s;
        }

            input[type="text"]#search-bar:focus {
                border-color: #1a73e8;
                outline: none;
            }

        /* Düzenleme formunun başlangıçta gizli olması */
        #edit-form-container {
            display: none;
        }
    </style>
</head>
<body>

    <h1>Patient Management</h1>

    <!-- Düzenleme Formu -->
    <div id="edit-form-container" style="display:none;">
        <h2>Edit Patient</h2>
        <form id="edit-form" onsubmit="updatePatient(event)">
            <input type="hidden" id="edit-id" />
            <input type="text" id="edit-name" placeholder="Name" required />
            <input type="text" id="edit-lastName" placeholder="Last Name" required />
            <input type="text" id="edit-tcNO" placeholder="TC NO" required />
            <button type="submit">Update Patient</button>
            <button type="button" onclick="closeEditForm()">Cancel</button>
        </form>
    </div>

    <!-- Patient List -->
    <div class="patients-list">
        <h2>Patients</h2>
        <input type="text" id="search-bar" placeholder="Search patients by name or TC NO" oninput="searchPatients()">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Last Name</th>
                    <th>TC NO</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="patients-table-body">
                <!-- Hastalar buraya eklenecek -->
            </tbody>
        </table>
    </div>

    <script>
        let patients = [];

        document.addEventListener('DOMContentLoaded', async function () {
            await fetchPatients();
        });

        async function fetchPatients() {
            try {
                const response = await fetch('/patients');
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                patients = await response.json();
                renderPatients();
            } catch (error) {
                console.error('Hata:', error);
            }
        }

        function renderPatients() {
            const tbody = document.getElementById('patients-table-body');
            tbody.innerHTML = '';
            patients.forEach(patient => {
                const row = `<tr>
                                        <td>${patient.name}</td>
                                        <td>${patient.lastName}</td>
                                        <td>${patient.tcNO}</td>
                                        <td class="actions">
                                            <button class="delete-btn" onclick="deletePatient('${patient.id}')">Delete</button>
                                        </td>
                                    </tr>`;
                tbody.insertAdjacentHTML('beforeend', row);
            });
        }

        async function deletePatient(id) {
            const confirmation = confirm('Are you sure you want to delete this patient?');
            if (!confirmation) return;

            try {
                const response = await fetch(`/patients/${id}`, {
                    method: 'DELETE'
                });

                if (!response.ok) {
                    const errorMessage = await response.text();
                    throw new Error(errorMessage);
                }

                patients = patients.filter(p => p.id !== id);
                renderPatients();
                alert('Patient deleted successfully.');
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the patient: ' + error.message);
            }
        }

        function searchPatients() {
            const searchTerm = document.getElementById('search-bar').value.toLowerCase();
            const filteredPatients = patients.filter(patient => {
                return (
                    patient.name.toLowerCase().includes(searchTerm) ||
                    patient.lastName.toLowerCase().includes(searchTerm) ||
                    patient.tcNO.includes(searchTerm)
                );
            });
            renderPatients(filteredPatients);
        }
    </script>

</body>
</html>

